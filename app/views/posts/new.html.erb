<div class="container mx-auto px-4">
  <div class="bg-white shadow-md rounded-lg p-6 max-w-2xl mx-auto">
    <h1 class="text-2xl font-bold mb-4">New Post</h1>
    <%= form_with model: @post, class: "space-y-4" do |form| %>
      <div>
        <%= form.label :body, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_area :body, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50", rows: 4 %>
      </div>
      <div class="field">
        <%= form.label :files, "Attach Image or Video", class: "block text-sm font-medium text-gray-700" %>
        <%= form.file_field :files, multiple: true, class: "mt-1 block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100" %>
      </div>
      <div>
        <%= form.submit class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    <% end %>
  </div>
</div>