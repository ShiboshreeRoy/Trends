<h1 class="text-2xl font-bold text-gray-900 mb-4">Posts</h1>

<% if user_signed_in? %>
  <%= link_to 'New Post', new_post_path, class: "text-blue-500 hover:underline mb-4 inline-block" %>
<% end %>

<div class="divide-y divide-gray-200">
  <% @posts.each do |post| %>
    <div class="p-4 hover:bg-gray-50">
      
      <% if post.original_post %>
        <!-- Reposted from section -->
        <p class="text-sm text-gray-500 mb-2">
          <%= link_to post.user.email.split('@').first.gsub(/\d/, '').sub(/\A\w/, &:upcase), user_path(post.user), class: "font-bold text-gray-700 hover:underline" %> reposted 
          <%= link_to post.original_post.user.email.split('@').first.gsub(/\d/, '').sub(/\A\w/, &:upcase), post_path(post.original_post), class: "font-bold text-gray-700 hover:underline" %>
        </p>
      <% end %>

      <!-- User info and timestamp -->
      <div class="flex justify-between items-center">
        <p class="font-bold text-gray-900">
          <%= link_to post.user.email.split('@').first.gsub(/\d/, '').sub(/\A\w/, &:upcase), user_path(post.user), class: "hover:underline" %>
        </p>
        <p class="text-sm text-gray-500">
          <%= post.created_at.strftime("%B %d, %Y at %I:%M %p") %>
        </p>
      </div>

      <!-- Post body text -->
      <p class="mt-2 text-gray-800"><%= post.body %></p>
      <% Tag.all.each do |tag| %>
    <%= link_to tag.name, posts_path(tag: tag.name), class: "text-blue-500 hover:underline ml-2" %>
  <% end %>
      <!-- File attachments (Images, Videos, and other files) -->
      <div class="file-attachment mt-4">
        <% post.files.each do |file| %>
          <% if file.content_type.start_with?('image') %>
            <%= image_tag url_for(file), class: "max-w-full h-auto rounded-lg shadow-md mb-2" %>
          <% elsif file.content_type.start_with?('video') %>
            <%= video_tag url_for(file), controls: true, class: "max-w-full h-auto rounded-lg shadow-md mb-2" %>
          <% else %>
            <%= link_to "Download file", rails_blob_path(file, disposition: "attachment"), class: "text-blue-500 hover:underline" %>
          <% end %>
        <% end %>
      </div>

      <!-- Post interaction buttons (Likes, Comments, Reposts) -->
      <div class="flex space-x-4 mt-2">
        <span><i class="fa fa-heart text-red-500"></i> <%= post.likes.count %></span>
        <span><i class="fa fa-comment text-blue-500"></i> <%= post.comments.count %></span>
        <span><i class="fa fa-retweet text-green-500"></i> <%= post.reposts.count %></span>
      </div>

      <!-- Link to view the post details -->
      <%= link_to 'View', post_path(post), class: "text-blue-500 hover:underline mt-2 inline-block" %>
    </div>
  <% end %>
</div>
