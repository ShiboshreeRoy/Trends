<div class="max-w-md mx-auto mt-16 p-8 bg-white rounded-2xl shadow-lg">
  <h2 class="text-3xl font-bold text-center text-gray-800 mb-6">Change your password</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="space-y-2">
      <%= f.label :password, "New password", class: "block text-sm font-medium text-gray-700" %>
      <% if @minimum_password_length %>
        <p class="text-xs text-gray-500">(<%= @minimum_password_length %> characters minimum)</p>
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "w-full px-4 py-2 border rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:outline-none" %>
    </div>

    <div class="space-y-2">
      <%= f.label :password_confirmation, "Confirm new password", class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-2 border rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:outline-none" %>
    </div>

    <div>
      <%= f.submit "Change my password", class: "w-full bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700 transition duration-150" %>
    </div>
  <% end %>

  <div class="mt-6 text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>
