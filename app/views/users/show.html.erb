<div class="max-w-2xl mx-auto p-4">
  <h1 class="text-2xl font-bold text-gray-900 mb-4"><%= @user.email.split('@').first.gsub(/\d/, '').sub(/\A\w/, &:upcase) %>'s Posts</h1>
  
  <div class="space-y-4">
    <% @posts.each do |post| %>
      <div class="bg-white shadow rounded-lg p-4">
        <% if post.original_post %>
          <p class="text-sm text-gray-500 mb-2">
            Reposted from <%= link_to post.original_post.user.email.split('@').first.gsub(/\d/, '').sub(/\A\w/, &:upcase), post.original_post, class: "text-blue-500 hover:underline" %>
          </p>
        <% end %>
        
        <div class="flex justify-between items-center mb-2">
          <span class="font-bold text-gray-900"><%= @user.email.split('@').first.gsub(/\d/, '').sub(/\A\w/, &:upcase) %></span>
          <span class="text-sm text-gray-500"><%= time_ago_in_words(post.created_at) %> ago</span>
        </div>
        
        <p class="text-gray-800 mb-2"><%= post.body %></p>
        
        <div class="flex space-x-4 text-gray-500 mb-2">
          <span><i class="fa fa-heart text-red-500 mr-1"></i><%= post.likes.count %></span>
          <span><i class="fa fa-comment text-blue-500 mr-1"></i><%= post.comments.count %></span>
          <span><i class="fa fa-retweet text-green-500 mr-1"></i><%= post.reposts.count %></span>
        </div>
        
        <%= link_to 'View', post_path(post), class: "text-blue-500 hover:underline" %>
      </div>
    <% end %>
  </div>
</div>